{{!--
	DESCRIPTION:
	This is nav with an off-canvas-navigation on mobile 
--}}
<nav class="nav-ver-three">

	<a class="logo" href="/" style="background: url({{#if data.nav.customization.logo }}{{{ data.nav.customization.logo }}}{{else}}/assets/images/sample-logo.png{{/if}}) center no-repeat; background-size: contain;">
		<img src="/assets/images/logo.gif" alt="{{#if data.nav.customization.title }}{{ data.nav.customization.title }}{{else}}logo{{/if}}">
	</a>

	<a href="#" class="hamburger off-canvas d-md-block d-lg-none">
		<span class="line-one"></span>
		<span class="line-two"></span>
		<span class="line-three"></span>
	</a>

	<ul class="main-nav">
		{{#each navOptions}}
			<li>
				<a href="#" class="jumper" data-target="page-{{lowercase title}}">{{title}}</a>
			</li>
		{{/each}}
	</ul>



</nav>

<style>
	nav.nav-ver-three { 
		padding: 0 0 0 15px;
		clear: both;
		display: block;
		position: relative;
		width: 100%;
		background: rgba(0,0,0,0.4);
	} 
	nav.nav-ver-three .logo { 
		display: inline-block; 
	}
	nav.nav-ver-three img { 
		width: 100%;
		max-width: 140px;
	}

	nav.nav-ver-three .main-nav { 
		float: right; 
		list-style: none;
		margin: 0; 
		padding: 0;
	}

	nav.nav-ver-three .main-nav li { 
		display: inline; 
		margin: 0; 
		padding: 0; 
	}

	nav.nav-ver-three .main-nav li a {
		transition: all 0.2s linear;
		font-family: Helvetica, sans-serif;
		font-weight: 100;
		text-decoration: none; 
		color: #FFF;
		float: left;
		font-size: 18px;
		padding: 22px 20px;
	}

	nav.nav-ver-three .main-nav li a:hover { 
		background: rgba(255,255,255,0.4);
	}

	nav.nav-ver-three .hamburger { display: none; position: absolute; }

	@media (max-width: 767px){
		#sitewrapper {
			padding: 0;
			clear: both;
			display: block;
			position: relative;
			width: 100%;
			transition: all 0.1s ease;
		}
		nav.nav-ver-three .main-nav { 
			transition: all 0.1s ease;
			z-index: 1px;
			right: -100%;
			width: 100%;
			left: auto;
			position: absolute;
			text-align: center;
			z-index: 1;
		}

		#sitewrapper.open {
			margin-left: -70%;
		}
		nav.nav-ver-three .main-nav.open {
			display: block;
			right: -100%;
			top: 0px;
			background: rgba(150,150,150,0.9);
			text-align: center;
		}
		nav.nav-ver-three .main-nav li a {
			display: block;
			width: 100%;
			text-align: left;
		}
		nav.nav-ver-three .hamburger { 
			position: absolute;
			display: inline-block; 
			right: 20px;
			top: 15px;
			width: 40px;
			height: 40px;
		}

		nav.nav-ver-three .hamburger .line-one,
		nav.nav-ver-three .hamburger .line-two,
		nav.nav-ver-three .hamburger .line-three {
			transition: all 0.05s ease;
			position: absolute;
			display: inline-block;
			height: 2px; 
			width: 40px;
			background: #efefef;
			top: 5px;

		}
		nav.nav-ver-three .hamburger .line-two { 
			top: 18px;
		}
		nav.nav-ver-three .hamburger .line-three {
			top: 32px;
		}

		nav.nav-ver-three .hamburger:hover .line-one {
			top: 7px;
		}
		nav.nav-ver-three .hamburger:hover .line-two {
			left: -5px;
			width: 50px;
		}
		nav.nav-ver-three .hamburger:hover .line-three {
			top: 30px;
		}

		nav.nav-ver-three .hamburger.open .line-one {
			top: 18px;
			transform: rotate(-45deg);
		}
		nav.nav-ver-three .hamburger.open .line-two {
			opacity: 0;
		}
		nav.nav-ver-three .hamburger.open .line-three {
			top: 18px;
			transform: rotate(45deg);
		}
	}


</style>
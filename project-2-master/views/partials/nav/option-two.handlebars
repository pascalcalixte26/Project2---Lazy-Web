{{!--
	DESCRIPTION:
	This is a light version of the navigation. 
--}}
<nav class="nav-ver-two">

	<a class="logo" href="/" style="background: url({{#if data.nav.customization.logo }}{{{ data.nav.customization.logo }}}{{else}}/assets/images/sample-logo.png{{/if}}) center no-repeat; background-size: contain;">
		<img src="/assets/images/logo.gif" alt="{{#if data.nav.customization.title }}{{ data.nav.customization.title }}{{else}}logo{{/if}}">
	</a>

	<a href="#" class="hamburger d-md-block d-lg-none">
		<span class="line-one"></span>
		<span class="line-two"></span>
		<span class="line-three"></span>
	</a>

	<ul class="main-nav">
		{{#each navOptions}}
			<li>
				<a href="#" class="jumper" data-target="page-{{lowercase title}}">{{title}}</a>
			</li>
		{{/each}}
	</ul>



</nav>

<style>
	nav.nav-ver-two { 
		clear: both;
		display: block;
		position: relative;
		width: 100%;
		background: rgba(255,255,255,0.4);
		padding: 0 0 0 15px;
	} 
	nav.nav-ver-two .logo { 
		display: inline-block; 
	}
	nav.nav-ver-two img { 
		width: 100%;
		max-width: 140px;
	}

	nav.nav-ver-two .main-nav { 
		float: right; 
		list-style: none;
		margin: 0; 
		padding: 0;
	}

	nav.nav-ver-two .main-nav li { 
		display: inline; 
		margin: 0; 
		padding: 0; 
	}

	nav.nav-ver-two .main-nav li a {
		transition: all 0.2s linear;
		font-family: Helvetica, sans-serif;
		font-weight: 100;
		text-decoration: none; 
		color: #333;
		float: left;
		font-size: 18px;
		padding: 22px 20px;
	}

	nav.nav-ver-two .main-nav li a:hover { 
		background: rgba(240,240,240,0.9);
	}

	nav.nav-ver-two .hamburger { display: none; position: absolute; }

	@media (max-width: 767px){
		nav.nav-ver-two .main-nav { 
			transition: all 0.1s ease;
			z-index: 1px;
			top: -1000px;
			width: 100%;
			left: 0px;
			text-align: center;
			position: absolute;
		}
		nav.nav-ver-two .main-nav.open {
			top: 70px;
			background: rgba(255,255,255,0.9);
			text-align: center;
			z-index: 100;
		}
		nav.nav-ver-two .main-nav li a {
			display: block;
			width: 100%;
		}
		nav.nav-ver-two .hamburger { 
			position: absolute;
			display: inline-block; 
			right: 20px;
			top: 15px;
			width: 40px;
			height: 40px;
		}

		nav.nav-ver-two .hamburger .line-one,
		nav.nav-ver-two .hamburger .line-two,
		nav.nav-ver-two .hamburger .line-three {
			transition: all 0.05s ease;
			position: absolute;
			display: inline-block;
			height: 2px; 
			width: 40px;
			background: #444;
			top: 5px;

		}
		nav.nav-ver-two .hamburger .line-two { 
			top: 18px;
		}
		nav.nav-ver-two .hamburger .line-three {
			top: 32px;
		}

		nav.nav-ver-two .hamburger:hover .line-one {
			top: 7px;
		}
		nav.nav-ver-two .hamburger:hover .line-two {
			left: -5px;
			width: 50px;
		}
		nav.nav-ver-two .hamburger:hover .line-three {
			top: 30px;
		}

		nav.nav-ver-two .hamburger.open .line-one {
			top: 18px;
			transform: rotate(-45deg);
		}
		nav.nav-ver-two .hamburger.open .line-two {
			opacity: 0;
		}
		nav.nav-ver-two .hamburger.open .line-three {
			top: 18px;
			transform: rotate(45deg);
		}
	}


</style>